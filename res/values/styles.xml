<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyleParkLotNameListItem">
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_end</item>
    </style>
    <style name="TextViewStyleParkLotAddressListItem">
        <item name="android:textSize">13dip</item>
        <item name="android:textColor">@color/black_end</item>
    </style>
    <style name="TextViewStyleHeaderDivider">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewStyleTitle">
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewStyleTitleAddress">
        <item name="android:textSize">13dip</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="reserveNowButton">
        <item name="android:background">@drawable/reserve_now_button</item>
        <item name="android:text">@string/parking_lot_activity_reserve_now_button</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">5dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewStyleBold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewStyleInfo">
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>        
    </style>
    <style name="TextViewStyleInfoPrice">
        <item name="android:textSize">25dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="listSeparatorTextViewStyle">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingTop">3dip</item>
	    <item name="android:paddingBottom">4dip</item>
	    <item name="android:paddingLeft">9dip</item>
	    <item name="android:background">@drawable/listview_header_background</item>
	    <item name="android:textAppearance">@style/TextViewStyleHeaderDivider</item>
  	</style>
</resources>