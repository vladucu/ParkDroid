<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="?android:attr/listPreferredItemHeight"
  android:paddingTop="0dip"
  android:paddingRight="0dip"
  android:paddingBottom="6dip">

  <ImageView
    android:id="@+id/icon"
    android:layout_width="32dip"
    android:layout_height="32dip"
    android:layout_alignParentTop="true"
    android:src="@drawable/category_none"
    android:scaleType="fitCenter"  
    android:gravity="center_horizontal"
    android:layout_marginTop="4dip"
    android:layout_marginLeft="5dip" />

  <TextView
    android:id="@+id/parkingLotName"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/icon"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_alignWithParentIfMissing="true"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:textAppearance="@style/TextViewStyleParkLotNameListItem"
    />

  <TextView
    android:id="@+id/parkingLotLocationLine1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/icon"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/parkingLotName"
    android:paddingLeft="7dip"
    android:paddingRight="10dip"
    android:textAppearance="@style/TextViewStyleParkLotAddressListItem"
    android:singleLine="true"
    android:maxLines="1"
    android:ellipsize="marquee" />
  
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/parkingLotLocationLine1"
    android:layout_toRightOf="@id/icon"
    android:paddingLeft="7dip"
    >
  
    <TextView
      android:id="@+id/parkingLotDistance"
      android:layout_width="90dip"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextViewStyleParkLotAddressListItem"
      android:ellipsize="end" />
    
    <ImageView
      android:id="@+id/iconTrending"
      android:layout_width="9dip"
      android:layout_height="9dip"
      android:src="@drawable/people_icon"
      android:layout_gravity="center_vertical"
      android:layout_marginTop="1dip"
      android:scaleType="fitCenter" />
      
    <TextView
      android:id="@+id/parkingLotSpaces"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="3dip"
      android:textAppearance="@style/TextViewStyleParkLotAddressListItem"
      android:ellipsize="end" />
    <TextView
      android:id="@+id/parkingPrice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="40dip"
      android:textAppearance="@style/TextViewStyleParkLotAddressListItem"
      android:layout_gravity="right"
      android:ellipsize="end" />
	
      
  </LinearLayout>
    
  <ImageView
    android:id="@+id/reservationCorner"
    android:src="@drawable/reservation_item_corner"
    android:layout_width="22dip"
    android:layout_height="22dip"
    android:scaleType="fitXY"
    android:padding="0dip"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:visibility="invisible"
    />
      
</RelativeLayout>
